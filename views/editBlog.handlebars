<section class="card">
    <h2>Edit Blog Post</h2>
    <form id="edit-blog-form">
    <input type="hidden" name="id" id="blogId" value="{{blog.id}}" />
    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" name="title" id="blogTitle" value="{{blog.title}}" />
    </div>
    <div class="form-group">
      <label for="body">Body</label>
      <textarea name="body" id="blogBody">{{blog.body}}</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
  </form>
</section>

<script src="editBlog.js"></script>